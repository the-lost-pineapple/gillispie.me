<h1>Listing links</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Href</th>
      <th>Target</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.title %></td>
        <td><%= link.href %></td>
        <td><%= link.target_string %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
